#include <stdio.h>
#include <stdlib.h>

int compare(const void *a, const void *b) {
    return (*(int *)a - *(int *)b);
}

int main() {
    int n;
    scanf("%d", &n);

    int weights[n];
    for (int i = 0; i < n; i++) {
        scanf("%d", &weights[i]);
    }

    qsort(weights, n, sizeof(int), compare);

    int count = 0;
    int i = 0;

    while (i < n) {
        int start = weights[i];
        count++;
        while (i < n && weights[i] <= start + 4) {
            i++;
        }
    }

    printf("%d\n", count);
    return 0;
}
