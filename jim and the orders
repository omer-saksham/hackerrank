#include <stdio.h>
#include <stdlib.h>

typedef struct {
    int id;
    int deliveryTime;
} Order;

int compare(const void *a, const void *b) {
    Order *orderA = (Order *)a;
    Order *orderB = (Order *)b;

    if (orderA->deliveryTime == orderB->deliveryTime)
        return orderA->id - orderB->id;
    return orderA->deliveryTime - orderB->deliveryTime;
}

int main() {
    int n;
    scanf("%d", &n);

    Order orders[n];

    for (int i = 0; i < n; i++) {
        int t, d;
        scanf("%d %d", &t, &d);
        orders[i].id = i + 1;
        orders[i].deliveryTime = t + d;
    }

    qsort(orders, n, sizeof(Order), compare);

    for (int i = 0; i < n; i++) {
        printf("%d ", orders[i].id);
    }

    return 0;
}
