#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int T;
    if (!(cin >> T)) return 0;
    while (T--) {
        int n;
        string s;
        cin >> n >> s;

        bool hasUnderscore = false;
        vector<int> freq(256, 0);
        for (char c : s) {
            if (c == '_') hasUnderscore = true;
            else ++freq[(unsigned char)c];
        }

        bool ok = true;
        if (!hasUnderscore) {
            if (n == 1) ok = false;
            else {
                for (int i = 0; i < n; ++i) {
                    bool leftEqual  = (i > 0 && s[i] == s[i-1]);
                    bool rightEqual = (i+1 < n && s[i] == s[i+1]);
                    if (!leftEqual && !rightEqual) { ok = false; break; }
                }
            }
        } else {
            for (int c = 0; c < 256; ++c) {
                if (freq[c] == 1) { ok = false; break; }
            }
        }

        cout << (ok ? "YES" : "NO") << '\n';
    }
    return 0;
}
